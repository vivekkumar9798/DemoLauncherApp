<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/splashRoot"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/splash_bg"
    android:fitsSystemWindows="false">

    <!-- Centered Logo Group -->
    <LinearLayout
        android:id="@+id/logoGroup"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:gravity="center"
        android:alpha="0"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent">

        <!-- Circular Logo -->
        <FrameLayout
            android:layout_width="100dp"
            android:layout_height="100dp"
            android:layout_gravity="center">

            <View
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:background="@drawable/splash_logo_bg" />

            <TextView
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:text="N"
                android:textColor="#FFFFFF"
                android:textSize="52sp"
                android:textStyle="bold"
                android:fontFamily="sans-serif-black"
                android:gravity="center" />
        </FrameLayout>

        <!-- App Name -->
        <TextView
            android:id="@+id/splashAppName"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="24dp"
            android:text="N Launcher"
            android:textColor="#FFFFFF"
            android:textSize="28sp"
            android:textStyle="bold"
            android:fontFamily="sans-serif-light"
            android:letterSpacing="0.12"
            android:gravity="center" />

        <!-- Tagline -->
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="8dp"
            android:text="Minimalist. Beautiful."
            android:textColor="#5B8CFF"
            android:textSize="13sp"
            android:fontFamily="sans-serif"
            android:letterSpacing="0.08"
            android:gravity="center" />

    </LinearLayout>

    <!-- Bottom Made With -->
    <TextView
        android:id="@+id/splashFooter"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginBottom="32dp"
        android:text="Made with â™¥"
        android:textColor="#2A2A2A"
        android:textSize="12sp"
        android:alpha="0"
        android:fontFamily="sans-serif"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent" />

</androidx.constraintlayout.widget.ConstraintLayout>
