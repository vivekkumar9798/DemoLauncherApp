<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/launcher_background_gradient"
    android:fitsSystemWindows="false">

    <!-- Header with Animation -->
    <LinearLayout
        android:id="@+id/permHeader"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:paddingStart="32dp"
        android:paddingEnd="32dp"
        android:paddingTop="80dp"
        android:paddingBottom="32dp"
        android:gravity="center"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent">

        <!-- App Logo/Icon -->
        <TextView
            android:layout_width="80dp"
            android:layout_height="80dp"
            android:text="ðŸš€"
            android:textSize="40sp"
            android:gravity="center"
            android:background="@drawable/splash_logo_bg"
            android:layout_marginBottom="20dp" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Welcome to Demo Launcher"
            android:textColor="@color/launcher_text_primary"
            android:textSize="28sp"
            android:textStyle="bold"
            android:fontFamily="sans-serif-light"
            android:shadowColor="#80000000"
            android:shadowDx="0"
            android:shadowDy="2"
            android:shadowRadius="4"
            android:layout_marginBottom="8dp" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Let's set up your personalized home screen"
            android:textColor="@color/launcher_text_secondary"
            android:textSize="16sp"
            android:fontFamily="sans-serif"
            android:gravity="center"
            android:layout_marginBottom="24dp" />

        <!-- Progress Indicator -->
        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:gravity="center">

            <View
                android:layout_width="32dp"
                android:layout_height="4dp"
                android:background="@color/launcher_accent"
                android:layout_marginEnd="8dp" />

            <View
                android:layout_width="32dp"
                android:layout_height="4dp"
                android:background="@color/launcher_divider"
                android:layout_marginEnd="8dp" />

            <View
                android:layout_width="32dp"
                android:layout_height="4dp"
                android:background="@color/launcher_divider"
                android:layout_marginEnd="8dp" />

            <View
                android:layout_width="32dp"
                android:layout_height="4dp"
                android:background="@color/launcher_divider" />

        </LinearLayout>

    </LinearLayout>

    <!-- Permission Cards Scroll -->
    <ScrollView
        android:id="@+id/permScrollView"
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:fillViewport="true"
        android:overScrollMode="never"
        android:scrollbars="none"
        app:layout_constraintTop_toBottomOf="@id/permHeader"
        app:layout_constraintBottom_toTopOf="@id/continueButton"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:paddingStart="20dp"
            android:paddingEnd="20dp"
            android:paddingBottom="16dp">

            <!-- Permission Card 1: All Apps -->
            <LinearLayout
                android:id="@+id/cardAllApps"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:gravity="center_vertical"
                android:padding="24dp"
                android:layout_marginBottom="16dp"
                android:background="@drawable/permission_card_bg"
                android:clickable="true"
                android:focusable="true"
                android:foreground="@drawable/app_item_ripple">

                <!-- Icon with Gradient Background -->
                <TextView
                    android:layout_width="56dp"
                    android:layout_height="56dp"
                    android:text="ðŸ“±"
                    android:textSize="28sp"
                    android:gravity="center"
                    android:background="@drawable/app_icon_background" />

                <!-- Text Content -->
                <LinearLayout
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:orientation="vertical"
                    android:layout_marginStart="20dp"
                    android:layout_marginEnd="12dp">

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="App Access"
                        android:textColor="@color/launcher_text_primary"
                        android:textSize="16sp"
                        android:textStyle="bold"
                        android:fontFamily="sans-serif-medium" />

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="4dp"
                        android:text="Required to display all installed apps"
                        android:textColor="@color/launcher_text_secondary"
                        android:textSize="13sp"
                        android:fontFamily="sans-serif" />
                </LinearLayout>

                <!-- Status with Animation -->
                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:orientation="vertical"
                    android:gravity="center">

                    <TextView
                        android:id="@+id/statusAllApps"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Grant"
                        android:textColor="@color/launcher_accent"
                        android:textSize="14sp"
                        android:textStyle="bold"
                        android:fontFamily="sans-serif-medium" />

                    <View
                        android:id="@+id/indicatorAllApps"
                        android:layout_width="8dp"
                        android:layout_height="8dp"
                        android:background="@color/launcher_accent"
                        android:layout_marginTop="4dp"
                        android:visibility="gone" />

                </LinearLayout>
            </LinearLayout>

            <!-- Permission Card 2: Wallpaper -->
            <LinearLayout
                android:id="@+id/cardWallpaper"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:gravity="center_vertical"
                android:padding="24dp"
                android:layout_marginBottom="16dp"
                android:background="@drawable/permission_card_bg"
                android:clickable="true"
                android:focusable="true"
                android:foreground="@drawable/app_item_ripple">

                <TextView
                    android:layout_width="56dp"
                    android:layout_height="56dp"
                    android:text="ðŸ–¼ï¸"
                    android:textSize="28sp"
                    android:gravity="center"
                    android:background="@drawable/app_icon_background" />

                <LinearLayout
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:orientation="vertical"
                    android:layout_marginStart="20dp"
                    android:layout_marginEnd="12dp">

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Set Wallpaper"
                        android:textColor="@color/launcher_text_primary"
                        android:textSize="16sp"
                        android:textStyle="bold"
                        android:fontFamily="sans-serif-medium" />

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="4dp"
                        android:text="Let the launcher manage your wallpaper"
                        android:textColor="@color/launcher_text_secondary"
                        android:textSize="13sp"
                        android:fontFamily="sans-serif" />
                </LinearLayout>

                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:orientation="vertical"
                    android:gravity="center">

                    <TextView
                        android:id="@+id/statusWallpaper"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Grant"
                        android:textColor="@color/launcher_accent"
                        android:textSize="14sp"
                        android:textStyle="bold"
                        android:fontFamily="sans-serif-medium" />

                    <View
                        android:id="@+id/indicatorWallpaper"
                        android:layout_width="8dp"
                        android:layout_height="8dp"
                        android:background="@color/launcher_accent"
                        android:layout_marginTop="4dp"
                        android:visibility="gone" />

                </LinearLayout>
            </LinearLayout>

            <!-- Permission Card 3: Default Launcher -->
            <LinearLayout
                android:id="@+id/cardDefaultLauncher"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:gravity="center_vertical"
                android:padding="24dp"
                android:layout_marginBottom="16dp"
                android:background="@drawable/permission_card_bg"
                android:clickable="true"
                android:focusable="true"
                android:foreground="@drawable/app_item_ripple">

                <TextView
                    android:layout_width="56dp"
                    android:layout_height="56dp"
                    android:text="ðŸ "
                    android:textSize="28sp"
                    android:gravity="center"
                    android:background="@drawable/app_icon_background" />

                <LinearLayout
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:orientation="vertical"
                    android:layout_marginStart="20dp"
                    android:layout_marginEnd="12dp">

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Set as Default Launcher"
                        android:textColor="@color/launcher_text_primary"
                        android:textSize="16sp"
                        android:textStyle="bold"
                        android:fontFamily="sans-serif-medium" />

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="4dp"
                        android:text="Make this your primary home screen"
                        android:textColor="@color/launcher_text_secondary"
                        android:textSize="13sp"
                        android:fontFamily="sans-serif" />
                </LinearLayout>

                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:orientation="vertical"
                    android:gravity="center">

                    <TextView
                        android:id="@+id/statusDefaultLauncher"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Set"
                        android:textColor="@color/launcher_accent"
                        android:textSize="14sp"
                        android:textStyle="bold"
                        android:fontFamily="sans-serif-medium" />

                    <View
                        android:id="@+id/indicatorDefaultLauncher"
                        android:layout_width="8dp"
                        android:layout_height="8dp"
                        android:background="@color/launcher_accent"
                        android:layout_marginTop="4dp"
                        android:visibility="gone" />

                </LinearLayout>
            </LinearLayout>

            <!-- Permission Card 4: Choose App -->
            <LinearLayout
                android:id="@+id/cardChooseApp"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:gravity="center_vertical"
                android:padding="24dp"
                android:layout_marginBottom="16dp"
                android:background="@drawable/permission_card_bg"
                android:clickable="true"
                android:focusable="true"
                android:foreground="@drawable/app_item_ripple"
                android:visibility="gone">

                <TextView
                    android:layout_width="56dp"
                    android:layout_height="56dp"
                    android:text="âœ…"
                    android:textSize="28sp"
                    android:gravity="center"
                    android:background="@drawable/app_icon_background" />

                <LinearLayout
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:orientation="vertical"
                    android:layout_marginStart="20dp"
                    android:layout_marginEnd="12dp">

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Choose Apps"
                        android:textColor="@color/launcher_text_primary"
                        android:textSize="16sp"
                        android:textStyle="bold"
                        android:fontFamily="sans-serif-medium" />

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="4dp"
                        android:text="Select which apps appear on home screen"
                        android:textColor="@color/launcher_text_secondary"
                        android:textSize="13sp"
                        android:fontFamily="sans-serif" />
                </LinearLayout>

                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:orientation="vertical"
                    android:gravity="center">

                    <TextView
                        android:id="@+id/statusChooseApp"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Choose"
                        android:textColor="@color/launcher_accent"
                        android:textSize="14sp"
                        android:textStyle="bold"
                        android:fontFamily="sans-serif-medium" />

                    <View
                        android:id="@+id/indicatorChooseApp"
                        android:layout_width="8dp"
                        android:layout_height="8dp"
                        android:background="@color/launcher_accent"
                        android:layout_marginTop="4dp"
                        android:visibility="gone" />

                </LinearLayout>
            </LinearLayout>

        </LinearLayout>
    </ScrollView>

    <!-- Continue Button with Enhanced Styling -->
    <TextView
        android:id="@+id/continueButton"
        android:layout_width="0dp"
        android:layout_height="56dp"
        android:layout_marginStart="32dp"
        android:layout_marginEnd="32dp"
        android:layout_marginBottom="48dp"
        android:background="@drawable/btn_blue_pill"
        android:gravity="center"
        android:text="Continue to Launcher"
        android:textColor="@color/white"
        android:textSize="16sp"
        android:textStyle="bold"
        android:fontFamily="sans-serif-medium"
        android:clickable="true"
        android:focusable="true"
        android:elevation="8dp"
        android:shadowColor="#40000000"
        android:shadowDx="0"
        android:shadowDy="4"
        android:shadowRadius="8"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent" />

</androidx.constraintlayout.widget.ConstraintLayout>
